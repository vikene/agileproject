<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth_pin"
    android:orientation="vertical"
    android:background="@drawable/screen"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/ic_launcher"
            android:id="@+id/authImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/pin23"
            android:layout_marginTop="70dp"
            android:text="ENTER PIN"
            android:textSize="@dimen/stringTitleSize"
            android:textStyle="bold"
            android:layout_below="@+id/authImage"
            android:id="@+id/authtitle"
            android:layout_centerHorizontal="true"


            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:id="@+id/pin23"
            android:layout_below="@+id/authtitle"
            android:layout_centerHorizontal="true"
            android:inputType="number"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:id="@+id/authpin"
            android:text="ENTER"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:background="#191715"
            android:layout_below="@id/pin23"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>



</LinearLayout>